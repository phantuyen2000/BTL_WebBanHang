@using BTL_Nhom2.Models
@model List<GioHang>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">THÔNG TIN ĐẶT HÀNG</h2>
<table align="center" border="1" cellpadding="0" cellspacing="0"
       style="font-size:13pt">
    <tr style="text-align:center;font-weight:bold">
        <th>Mã sản phẩm</th>
        <th>Tên sản phẩm</th>
        <th>Hình minh họa</th>
        <th>Đơn vị tính</th>
        <th>Số lượng mua</th>
        <th>Đơn giá</th>
        <th>Thành tiền</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center;font-weight:bold">
            <td>@item.iSPId</td>
            <td>@item.sTenSP</td>
            <td><img src="~/Content/images/@item.sHinhMinhHoa" width="70" /></td>
            <td>@item.sDonViTinh</td>
            <td>@item.iSoLuong</td>
            <td>@string.Format("{0:0,0}", item.iDonGia)</td>
            <td>@string.Format("{0:0,0}", item.dThanhTien)</td>
        </tr>
    }
    <tr style="text-align:center; font-weight:bold">
        <td colspan="4">Số lượng sản phẩm: @ViewBag.TongSL</td>
        <td colspan="3">Tổng tiền: @String.Format("{0:0,0}", ViewBag.TongTien)</td>
    </tr>
</table>
<br />
<br />
<h2 style="text-align:center">THÔNG TIN KHÁCH HÀNG</h2>
@{
    KhachHang kh = (KhachHang)Session["TaiKhoan"];
}
<table align="center" border="1" cellpadding="0" cellspacing="0"
       style="font-size:13pt">
    @Html.ValidationSummary(true)
    <tr style="height:40px">
        <td>Họ tên khách hàng</td>
        <td style="font-weight:bold">@kh.HoTen</td>
    </tr>
    <tr style="height:40px">
        <td>Địa chỉ:</td>
        <td style="font-weight:bold">@kh.DiaChi</td>
    </tr>
    <tr style="height:40px">
        <td>Điện thoại:</td>
        <td style="font-weight:bold">@kh.DienThoai</td>
    </tr>
    <tr style="height:40px">
        <td>Email:</td>
        <td style="font-weight:bold">@kh.Email</td>
    </tr>
    <tr style="height:40px">
        <td>Ngày đặt:</td>
        <td style="font-weight:bold">@DateTime.Now.ToShortDateString()</td>
    </tr>
</table>
<br /><br />
<form style="text-align:center" action="@Url.Action("GioHang","GioHang")" method="post">
    <input type="submit" value="Trở về giỏ hàng" />
</form>
<br />
<div style="text-align:center">
    @using (Html.BeginForm())
    {
        <input type="submit" value="Đồng ý đặt hàng" />
    }
</div>
